<h3>スケジュール新規作成</h3>


<%= form_for @task do |f| %>
<table>
  <tr>
    <th><%= f.label :title, "名前" %></th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th><%= f.label :start_at, "開始日" %></th>
    <td><%= f.date_field :start_at %></td>
  </tr>
  <tr>
    <th><%= f.label :end_at, "終了日" %></th>
    <td><%= f.date_field :end_at %></td>
  </tr>
  <tr>
    <th><%= f.label :all_day, "終日" %></th>
    <td>
      <%= f.check_box :all_day %>
      <p>終日の場合はチェックを入れます</p>
    </td>
  </tr>
  <tr>
    <th><%= f.label :memo, "スケジュールメモ" %></th>
    <td><%= f.text_area :memo, class: "memo" %></td>
  </tr>
</table>
<div>
  <ul>
    <li>
      <%= f.submit "スケジュールを新規登録する" %>
    </li>
    <li>
      <%= link_to"スケジュール一覧に戻る", :tasks %>
    </li>
  </ul>
</div>
<% end %>